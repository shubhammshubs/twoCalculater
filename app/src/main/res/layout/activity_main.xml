<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/buttonBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Birth Date"
        android:layout_marginTop="16dp" />

    <!--Birthdate Result Display-->

    <TextView
        android:id="@+id/textViewBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/buttonBirthDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Birth Date"
        android:layout_marginTop="200dp" />

    <!--Birthdate Result Display-->

    <TextView
        android:id="@+id/textViewBirthDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp" />


    <!--Submit Button-->

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="369dp" />

    <!--Result will be display here-->

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
